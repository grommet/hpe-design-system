{
  "name": "design-tokens",
  "version": "0.1.0",
  "type": "module",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./esm-unresolved": "./dist/esm-unresolved/index.js",
    "./dist/css/*.css": {
      "import": "./dist/css/*.css",
      "require": "./dist/css/*.css"
    },
    "./dist/tailwind/*.js": {
      "import": "./dist/tailwind/*.js",
      "require": "./dist/tailwind/*.js"
    },
    "./tree": "./dist/tree/index.js"
  },
  "scripts": {
    "prettier:check": "prettier --check src/",
    "sync-tokens-to-figma": "tsx src/scripts/sync_tokens_to_figma.ts",
    "sync-figma-to-tokens": "tsx src/scripts/sync_figma_to_tokens.ts",
    "build-style-dictionary": "tsx src/scripts/build-style-dictionary.js",
    "build-token-tree": "tsx src/scripts/build-token-tree.js",
    "build": "rm -rf ./dist && tsx src/scripts/build.js && yarn build-style-dictionary && yarn build-token-tree",
    "release-stable": "node src/scripts/release-stable.js  --branch=design-tokens-alpha-stable",
    "paddingY:verify": "tsx src/scripts/verify-paddingY.ts",
    "paddingY:update": "tsx src/scripts/update-paddingY.ts",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "sd-tailwindcss-transformer": "^1.4.5",
    "tsx": "^4.16.2",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "del": "^6.1.1",
    "fs-extra": "^11.2.0",
    "jest": "^29.6.2",
    "prettier": "3.0.0",
    "simple-git": "^3.24.0",
    "style-dictionary": "^3.9.2",
    "style-dictionary-utils": "^2.0.7",
    "ts-jest": "^29.1.1"
  }
}
